<h2><%= @category.name %> </h2>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
<% @category.articles.each do |article| %>
    <tr>
      <td><%= link_to(article.title, article) %></td>
      <td><%= link_to("Edit", edit_article_path(article)) %></td>
      <td><%= link_to("Delete", article_path(article), class: "delete-button") %></td>

    </tr>
<% end %>
</table>


